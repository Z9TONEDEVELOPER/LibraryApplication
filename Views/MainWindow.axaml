<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Models="clr-namespace:LibraryApp.Models"
        xmlns:Views="clr-namespace:LibraryApp.Views"
        x:DataType="Views:MainWindow"
        x:Class="LibraryApp.Views.MainWindow"
        x:Name="MainWindowRoot"
        Title="Читательский киоск"
        WindowState="FullScreen"
        Topmost="True"
        CanResize="False"
        ShowInTaskbar="False">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="120" /> <!-- Header -->
      <RowDefinition Height="*" />   <!-- Основной контент -->
    </Grid.RowDefinitions>

    <!-- === Header (баннер + невидимая кнопка) === -->
    <Grid Grid.Row="0">
      <!-- Фон header -->
      <Image Source="avares://LibraryApp/Assets/Background/cbs_header.png"
             Stretch="Uniform"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch" />

      <!-- Невидимая кнопка на весь header -->
      <Button x:Name="CbsButton"
              Background="Transparent"
              BorderThickness="0"
              Click="OpenCbsSite"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Cursor="Hand" />

      <!-- Кнопка меню (бургер) -->
      <Button x:Name="MenuButton"
              Content="☰"
              FontSize="24"
              Foreground="White"
              Background="Transparent"
              BorderThickness="0"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Margin="20,15,0,0"
              Click="ToggleSidebar" />
    </Grid>

    <!-- === Основной контент (пока пустой) === -->
    <Border x:Name="MainContent" Grid.Row="1" />

    <!-- === Боковая панель (изначально скрыта) === -->
    <Border x:Name="Sidebar"
            Width="280"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#f0f0f0"
            IsVisible="False"
            Margin="0,0,0,0"
            ZIndex="50">
      <StackPanel Spacing="12" Margin="20,20,20,0">
        <TextBlock Text="Меню" FontSize="20" FontWeight="Bold" Foreground="#333" />
        <Separator />

        <Button Content="Ресурсы"
                FontSize="18"
                Background="Transparent"
                BorderThickness="0"
                Foreground="#333"
                HorizontalAlignment="Stretch"
                Click="ShowResources" />

        <Button Content="Программы"
                FontSize="18"
                Background="Transparent"
                BorderThickness="0"
                Foreground="#333"
                HorizontalAlignment="Stretch"
                Click="ShowPrograms" />

        <Separator />

        <Button Content="Назад"
                FontSize="16"
                Background="#e0e0e0"
                BorderBrush="#ccc"
                BorderThickness="1"
                CornerRadius="4"
                Foreground="#333"
                HorizontalAlignment="Stretch"
                Click="HideSidebar" />
      </StackPanel>
    </Border>
  </Grid>
</Window>